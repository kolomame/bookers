

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>


  <tbody>
    <% @books.each do |book| %>

    <tr>

      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are yue sure?" %></td>

    </tr>


  <% end %>

</table>




<h1>New book</h1>
<div class = error>
  <% if @book.errors.any? %>
    <p class = num_error><%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <ul class = error_list>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>


<%= form_with model: @book do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>


  <%= f.label :body %> <br>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>
