<h1>Editing Book</h1>
<div class = error>
  <% if @book.errors.any? %>
    <p class = num_error><%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <ul class = error_list>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>


<%= form_with model: @book do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show', book_path %>
